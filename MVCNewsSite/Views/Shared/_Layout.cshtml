<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="referrer" content="no-referrer-when-downgrade" />
    <title>@ViewData["Title"] - Red Rooster News - Cock-A-Doodle-Doo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href='https://fonts.googleapis.com/css?family=Allerta Stencil' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCNewsSite.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Layout.css" asp-append-version="true" />
    <style>button.navbar-toggler {margin-left:30px;}</style>
    
</head>
<body>

    <div class="ultimate-container">

    <script src="~/js/GeoLocation.js"></script>



    <header>




        <nav class=" navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="border-color:black; left:0;right:0; position:fixed;" id="nav-border">


            <script>
                var x = document.getElementById("demo");
                function getLocation() {
                    if (navigator.geolocation) {
                        navigator.geolocation.getCurrentPosition(showPosition);
                    } else {
                        x.innerHTML = "Geolocation is not supported by this browser.";
                    }
                }

                function showPosition(position) {
                    x.innerHTML = "Latitude: " + position.coords.latitude +
                        "<br>Longitude: " + position.coords.longitude;
                }
            </script>


                <div class="container-fluid"style="background-color:limegreen;  position:relative; width:100vw;">
                   
                    <img src="~/Images/Red_Rooster.png" alt="Red Rooster Logo" style=" position:absolute; height:100%; width:auto; left:0%;" />
                    &nbsp; 
                    
                    <div class="test">
                    <a class="navbar-brand one two three four five" style="color:yellow;" id="RRTitleId testing" asp-area="" asp-controller="News" asp-action="Index">Red Rooster News</a>
                    </div>
                    


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button> <!-- Button that shows up when screen width is less than 576 -->


                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="position:relative;bottom:10px;" ;>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link"; style="color:yellow;" asp-area="" asp-controller="News" asp-action="Sports">Sports</a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link" style="color:yellow;" style="color:yellow;" asp-area="" asp-controller="News" asp-action="Business">Business</a>

                        </li>

                        <li class="nav-item">
                                <a class="nav-link" style="color:yellow;" asp-area="" asp-controller="News" asp-action="Entertainment"> Entertainment </a>

                        </li>


                            <li class="nav-item">
                                <a class="nav-link" style="color:yellow;" asp-area="" asp-controller="News" asp-action="Health"> Health </a>

                        </li>

                            <li class="nav-item">
                                <a class="nav-link" style="color:yellow;" asp-area="" asp-controller="News" asp-action="Science"> Science </a>

                        </li>


                            <li class="nav-item">
                                <a class="nav-link" style="color:yellow;"  asp-area="" asp-controller="News" asp-action="Technology"> Technology </a>

                        </li>

                            <li ><input type="text" id="articleSearch" value="" style="margin-left:20px; margin-right:20px; margin-top:10px;" /> </li>
                                
                                &nbsp;<li> <button class="articleSearchBtn"> Search </button> </li>

                       

                    </ul>

                        

                    <partial name="_LoginPartial" />
                </div>

            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3" style="padding-top:150px;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
         &copy; 2023 - Red Rooster News - <a asp-area="" asp-controller="News" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </div>


<script src="~/js/searchFunctionality.js"></script>



</body>
</html>
